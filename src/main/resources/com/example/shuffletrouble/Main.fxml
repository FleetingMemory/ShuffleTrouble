<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.text.Font?>

<AnchorPane fx:id="anchorPane" prefHeight="700.0" prefWidth="1000.0" stylesheets="@../../../cssStyles/homepage.css" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.shuffletrouble.MainController">
   <children>
      <Pane cache="true" depthTest="DISABLE" layoutX="-1.0" layoutY="-1.0" nodeOrientation="LEFT_TO_RIGHT" prefHeight="400.0" prefWidth="1000.0">
         <children>
            <ImageView fx:id="trouble" fitHeight="317.0" fitWidth="558.0" layoutX="700.0" layoutY="120.0" pickOnBounds="true" preserveRatio="true">
               <image>
                  <Image url="@../../../trouble.png" />
               </image>
            </ImageView>
         </children>
      </Pane>
      <HBox alignment="CENTER" layoutY="436.0" prefHeight="132.0" prefWidth="1000.0">
         <children>
            <Button fx:id="playButton" alignment="CENTER" contentDisplay="CENTER" mnemonicParsing="false" onAction="#switchToPlayerScreen" stylesheets="@../../../cssStyles/homepage.css" text="Play" textAlignment="JUSTIFY" textFill="#c96b00">
               <font>
                  <Font size="35.0" />
               </font>
               <HBox.margin>
                  <Insets right="70.0" />
               </HBox.margin></Button>
            <Button fx:id="exitButton" contentDisplay="CENTER" mnemonicParsing="false" onAction="#exitGame" text="Exit" textAlignment="JUSTIFY" textFill="#ff4444">
               <font>
                  <Font size="35.0" />
               </font>
               <HBox.margin>
                  <Insets left="70.0" />
               </HBox.margin></Button>
         </children>
         <opaqueInsets>
            <Insets />
         </opaqueInsets>
      </HBox>
      <ImageView fx:id="shuffle" fitHeight="245.0" fitWidth="524.0" layoutX="-916.0" layoutY="24.0" pickOnBounds="true" preserveRatio="true">
         <image>
            <Image url="@../../../shuffle.png" />
         </image>
      </ImageView>
   </children>
</AnchorPane>
